generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id
  firstName   String?
  lastName    String?
  username    String?
  phoneNumber String?
  isAdmin     Boolean    @default(false)
  isActive    Boolean    @default(true)
  licesnse    Licesnse[]
  payments    Payment[]
}

model Course {
  id        Int        @id @default(autoincrement())
  title     String
  image     String
  price     Int
  isActive  Boolean    @default(true)
  uuid      String?
  licesnses Licesnse[]
  payments  Payment[]
}

model Payment {
  id            Int      @id @default(autoincrement())
  courseId      Int
  userId        Int
  success       Boolean?
  cardNumber    String?
  refNumber     String?
  trackingCode  String?
  transactionId String?
  amount        Int
  course        Course   @relation(fields: [courseId], references: [id])
  user          User     @relation(fields: [userId], references: [id])
}

model Licesnse {
  id       Int    @id @default(autoincrement())
  courseId Int
  userId   Int
  token    String
  course   Course @relation(fields: [courseId], references: [id])
  user     User   @relation(fields: [userId], references: [id])
}
